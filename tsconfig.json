{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": ["ES2022"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true, // Genera archivos .d.ts
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "src/tests","**/*.test.ts"],
    "ts-node": {
        "compilerOptions": {
            "module": "ESNext"
        }
    }
}