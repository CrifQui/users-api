{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS", // Cambiado para mejor compatibilidad con Node.js
        "moduleResolution": "node", // Cambiado de "bundler" a "node"
        "lib": ["ES2022"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true, // Genera archivos .d.ts
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}